{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16", // 또는 "" (서버 실행환경 맞춰서)
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "strict": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "**/__mocks__/**", "node_modules", "dist"]
}
